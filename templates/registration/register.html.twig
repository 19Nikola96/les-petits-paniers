{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container">
        <!-- formulaire -->
        <div class="row connexion">
            <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
                {{ form_start(registrationForm) }}
                    <!-- juste pour info ne pas mettre -->
                    <div class="row">
                        <div class="col-12 text-center bg-white p-5">
                            <h2>Création compte</h2>
                        </div>
                    </div>
                    <!-- fin -->
                    <div class="form-group row pt-4">
                        <div class="col-12">
                            {{ form_widget(registrationForm.lastname, {'attr': {'placeholder': 'Nom'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12">
                            {{ form_widget(registrationForm.firstname, {'attr': {'placeholder': 'Prénom'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12">
                            {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'Email'}}) }}
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-12">
                            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'placeholder': 'Mot de passe'}}) }}
                            <div class="m-3">

                            </div>
                            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'placeholder': 'Confirmez votre mot de passe'}}) }}
                        </div>
                    </div>
                    <div class="form-check">
                        {{ form_row(registrationForm.agreeTerms, {
                            label: 'J’ai lu et j’accepte les condition générales'
                        }) }}
                    </div>
                    <div class="form-check pb-5">
                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                        <label class="form-check-label" for="defaultCheck1">
                            Je m’inscris à la newsletter
                        </label>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button class="btn btn-primary btn-block">S'inscrire</button>
                        </div>
                    </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

{% endblock %}

