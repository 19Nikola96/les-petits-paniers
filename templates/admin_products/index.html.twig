{% extends 'base.html.twig' %}

{% block title %}Hello AdminProductsController!{% endblock %}

{% block body %}

    <h1>Gestion des paniers</h1>


    <p><a href="{{ path('app_adminproducts_edit') }}" class="btn btn-primary">Ajouter un panier</a> </p>


    <table class="table">
        <tr>

            <th>Panier</th>
            <th>Photo</th>
            <th>Description</th>
            <th>Prix</th>
            <th width="250px"></th>
        </tr>


        {% for product in products %}
            <tr>
                <td>{{ product.label }}</td>
                <td>{{ product.photo }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_adminproducts_edit', {'id' : product.id}) }}"><i class="far fa-edit"></i></a>
                    <a class="btn btn-danger" href="{{ path('app_adminproducts_delete', {'id' : product.id}) }}"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}
